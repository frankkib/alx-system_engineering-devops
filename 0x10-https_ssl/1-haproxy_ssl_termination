global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    timeout connect 5s
    timeout client 50s
    timeout server 50s

frontend http_front
    bind *:80
    redirect scheme https if !{ ssl_fc }
    http-request set-header X-Forwarded-Proto https
    default_backend http_back

frontend https_front
    bind *:443 ssl crt /etc/haproxy/certs/www.holberton.online
    mode http
    default_backend https_back

backend http_back
    mode http
    balance roundrobin
    server 80820-web-01 174.129.68.202:80 check
    server 80820-web-02 100.26.53.81:80 check

backend https_back
    mode http
    balance roundrobin
    server 80820-web-01 174.129.68.202:443 check
    server 80820-web-02 100.26.53.81:443 check

